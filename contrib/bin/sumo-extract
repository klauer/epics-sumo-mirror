#!/bin/sh

set -e

SHARE=../share

# define some environment variables:
source $SHARE/sumo.vars

MODULES=configure/MODULES

if [ -z "$3" ]; then
    echo "usage: $SCRIPT [support-name] [support-version] [build-name]"
    exit 1
fi

module="$1"
version="$2"
build="$3"

dir=$SUMODIR/build/$module/$version+$build

if [ ! -d $dir ]; then
    echo "error, directory '$dir' not found"
    exit 1
fi

if [ -d $module ]; then
    echo "error, cannot create '$module', it already exists"
    exit 1
fi

cp -a $dir .
mv $version+$build $module

echo "$dir" was copied to $module

cd $module > /dev/null

$SUMO_SCAN -c $SUMO_SCAN_CONFIG -d . all | $SUMO_DB --no-default-config appconvert - > $MODULES

$SUMO_DB --maxstate unstable --db $SUMODIR/database/DEPS.DB -c $MODULES makeconfig
$SUMO_BUILD --maxstate unstable --db $SUMODIR/database/DEPS.DB --builddb $SUMODIR/build/BUILDS.DB --supportdir $SUMODIR/build -c $MODULES makeconfig

echo "creating configure/RELEASE"
$SUMO_BUILD use 

